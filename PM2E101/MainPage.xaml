<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E101.MainPage">

    <StackLayout>

        <Frame BackgroundColor="#2196F3" Padding="15" CornerRadius="0">
            <Label Text="Examen I Parcial Cristofer Madrid" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Image x:Name="foto" Source="camara2.png" Margin="4,0,2,0" WidthRequest="150" HeightRequest="150"  />
        <Button x:Name="btnFoto" Text="Foto" Clicked="btnFoto_Clicked" />
        



        <Grid ColumnDefinitions="*,*">

            <Entry x:Name="txtLatitud" Placeholder="Latitud" IsEnabled="False" />
            <Entry Grid.Column="1"  x:Name="txtLongitud" Placeholder="Longitud" IsEnabled="False"/>

        </Grid>
        <Entry x:Name="txtDescripcion" Placeholder="Descripción" HeightRequest="150" />

        <Grid ColumnDefinitions="*,*">
            <Button x:Name="btnAgregar" Text="Agregar" Clicked="btnAgregar_Clicked" />
            <Button Grid.Column="1" x:Name="btnLista" Text="Lista" Clicked="btnLista_Clicked" />


        </Grid>
    </StackLayout>

</ContentPage>
